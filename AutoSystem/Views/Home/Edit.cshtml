@model AutoSystem.Models.Vehicle

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

<main>
    @using (Html.BeginForm("UpdateVehicle", "Home", FormMethod.Post))
    {
    <fieldset>
        <legend>Dados do veículo</legend>

        <div class="input-block">
            <label for="name">Nome do Veículo</label>
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>

        <div class="input-block">
            <label for="avatar">
                Valor do Veículo
            </label>
            @Html.EditorFor(model => model.Value)
            @Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger" })
        </div>

        @Html.HiddenFor(m => m.ID)

        <button class="sub-button" type="submit">Atualizar</button>
    </fieldset>
        @section Scripts{
            @Scripts.Render("~/bundles/jqueryval");
        }
    }
</main>